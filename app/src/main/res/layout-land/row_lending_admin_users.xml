<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <TextView
        android:id="@+id/row_lending_admin_users_book"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_lending_admin_users_issue_return_delay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@drawable/sh_gradient"
        android:gravity="center_vertical|end"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row_lending_admin_users_book" />

</android.support.constraint.ConstraintLayout>